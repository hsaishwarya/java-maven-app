pipeline {
    agent any
    tools {
         maven "m1"
         }
    stages {
        stage(clone) {
            steps {
                 git "https://github.com/hsaishwarya/java-maven-app.git"             
            }
        }
          stage(build) {
            steps {
                sh "mvn clean install -Dskiptests"
            }
          }
            stage(test) {
            steps {
                 sh "mvn test"
               
            }
            post {
                always {
                    junit "target/surefire-reports/*.xml"
                }
            }
        }
          stage(run) {
            steps {
                 sh "./scripts/deliver.sh"
           }
       }
    }
}
